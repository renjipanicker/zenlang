include Window public;
include Mainframe;
include Button;
include TextEdit;
include Menu;
include MenuItem;
include WindowCreator;

main MyMain {
    auto defn = MainFrame::Definition {
                title     : "test";
                position  : Window::Position {x:10;y:10;w:400;h:200;};
                visible   : true;
                childList : [ string:pointer<Window::Definition>,
                             @systray: &Systray::Definition {
                                tooltip : "guiTest";
                                visible : true;
                                childList : [ string:pointer<Window::Definition>,
                                    @menu: &Menu::Definition {
                                    childList : [ string:pointer<Window::Definition>,
                                        @showItem: &MenuItem::Definition {
                                          label : "Show";
                                        },
                                        @hideItem: &MenuItem::Definition {
                                          label : "Hide";
                                        },
                                        @exitItem: &MenuItem::Definition {
                                          label : "Exit";
                                        },
                                    ];
                                    },
                                ];
                             },
                             @checkBox: &Button::Definition {
                                title   : "Check";
                                position: Window::Position {x:10;y:10;w:60;h:22;};
                                left    : Window::Anchor {target:@parent;margin:10;};
                             },
                             @outputBox: &TextEdit::Definition {
                                title:"Output";
                                position:Window::Position{x:10;y:50;w:300;h:100;};
                                multiline:true;
                             }
                           ];
             };

    auto mainFrame = WindowCreator::Create(defn);
    auto checkBtn1 = mainFrame.childWin@@checkBox;
    auto checkBtn = <Window::Handle>mainFrame.childList@@checkBox;
    auto outputBox = mainFrame.childWin@@outputBox;

    auto showMenu = mainFrame.childWin@@systray;
//    auto showMenu = mainFrame.childWin@@systray][@menu][@showItem];
//    auto showMenu = mainFrame@@systray@@menu@@showItem;

    Window::OnResize(mainFrame) => Window::OnResize::Handler {
        print "on resize\n";
        auto pp = Window::getWindowPosition(mainFrame);
        auto cp = Window::getChildPosition(outputBox);
        cp.w = pp.w - cp.x - 20;
        cp.h = pp.h - cp.y - 50;
        run Window::Move(outputBox, cp);
        return ();
    };

    Button::OnClick(checkBtn) => Button::OnClick::Handler {
        print "on click\n";
        TextEdit::AppendText(outputBox, "hello!\n");
        return ();
    };
    return (0);
}
